    section(name="1_Epos_Terminals" default="0")
        header EPOS Terminals
        p How many EPOS devices? 
        p (Default = 0)
        input(type="number" step="1")
        footer Reply with number
    section(name="2_Ticket_Printers" default="0")
        header Ticket Printers
        p How many ticket printers? 
        p (Default = 0)
        input(type="number" step="1")
        footer Reply with number
    section(name="3_Scanners" default="0")
        header Scanners
        p How many scanner devices? 
        p (Default = 0)
        input(type="number" step="1")
        footer Reply with number
    section(name="4_Equipment_Location")
        header Location
        p Where is this equipment?
        ul
            li(value="shop") Shop/business
            li(value="storage") Storage
    section(name="5_Inspect" default="now")
        header Inspect
        p When is it available for inspection?
        p example: now, after 3 weeks, after 2 months 
        p (default=now)
        input(type="date")
    section(name="6_Pickup" default="now")
        header Pickup
        p When would it be available for pickup?
        p example: now, after 3 weeks, after 2 months 
        p (default=now)
        input(type="date")