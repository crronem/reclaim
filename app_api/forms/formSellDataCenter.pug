    section(name="1_Servers_And_Storage" default=values._1)
        header Servers & Storage
        p How many servers or storage devices? 
        if values._1 == 0
            p (Default = 0)
        else
            p (Was #{values._1})
        input(type="number" step="1")
        footer Reply with number
    section(name="2_Switches_And_Routers" default=values._2)
        header Switches & Routers
        p How many switches and/or routers? 
        if values._2 == 0
            p (Default = 0)
        else
            p (Was #{values._2})
        input(type="number" step="1")
        footer Reply with number
    section(name="3_Firewalls-Gateways_And_Others" default=values._3)
        header Firewalls, Gateways & Others
        p How many firewalls, bridges, hubs and/or gateways? 
        if values._3 == 0
            p (Default = 0)
        else
            p (Was #{values._3})
        input(type="number" step="1")
        footer Reply with number
    section(name="4_Equipment_Location" default=values._4)
        header Location
        p Where is this equipment?
        if values._4 == 0
            p (Default = Storage)
        else
            p (Was #{values._4})
        ul
            li(value="shop") Shop/business
            li(value="storage") Storage
    section(name="5_Inspect" default=values._5)
        header Inspect
        p When is it available for inspection?
        p example: now, after 3 weeks, after 2 months 
        if values._5 == 0
            p (Default = Now)
        else
            p (Was #{values._5})
        input(type="date")
    section(name="6_Pickup" default=values._6)
        header Pickup
        p When would it be available for pickup?
        p example: now, after 3 weeks, after 2 months 
        if values._6 == 0
            p (Default = Now)
        else
            p (Was #{values._6})
        input(type="date")